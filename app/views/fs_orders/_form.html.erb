<%= form_with(model: fs_order, local: true) do |form| %>
  <% if fs_order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(fs_order.errors.count, "error") %> prohibited this fs_order from being saved:</h2>

      <ul>
      <% fs_order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Customer</th>
        <th>Ship To</th>
        <th>Ship Date</th>
        <th>Purchase Order</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @fs_order.customer %></td>
        <td><%= @fs_order.shipto %></td>
        <% if Time.current.tomorrow.strftime('%Y-%m-%d') == fs_order.date_required.strftime('%Y-%m-%d') %>
          <td><%= display_date(@fs_order.date_required) %></td>
        <% else %>
          <td class="blinking"><%= display_date(@fs_order.date_required) %></td>
        <% end %>
        <td><%= @fs_order.po_number %></td>
      </tr>
    </tbody>
  </table>

  <table>
    <thead>
      <tr>
        <th>Notes</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @fs_order.notes %></td>
      </tr>
    </tbody>
  </table>

  <table class="table table-bordered" >
    <thead>
      <tr>
        <th> Quantity </th>
        <th> UOM </th>
        <th> Part </th>
        <th> Description </th>
      </tr>
    </thead>
    <tbody>
      <% @fs_order.fs_order_parts.each do |c| %>
      <tr>
        <td> <%= c.qty %> </td>
        <td> <%= c.uom %> </td>
        <td> <%= c.partcode %> </td>
        <td> <%= c.partdesc %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <div>
    <%= form.label :order_num, "Order Number" %>
    <%= form.text_field :order_num, {id: "fs_order_order_num", :oninput=> ("setQuit()"), :size=>"7", :maxlength => "7"} %>
  </div>
  <div class="actions">
    <%= form.submit "Submit", :id => 'Scomit', :style => "display: none;" %>
  </div>
<% end %>
